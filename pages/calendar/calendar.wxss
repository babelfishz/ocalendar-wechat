/* pages/Calendar/calendar.wxss */
.box1 .dateBox{
  position: relative;
  width: 100%;
  height: 50px;
  line-height: 50px;
  text-align: center;
  margin-top: 10px;
  font-size: 40rpx;
}

.box1 .dateBox .left-arrow{
  position: absolute;
  top:0px;
  left:0px;
  width: 50px;
  height: 50px;
  line-height: 50px;
}

.box1 .dateBox .right-arrow{
  position: absolute;
  top:0px;
  right:0px;
  width: 50px;
  height: 50px;
  line-height: 50px;
}

.box1{
  display: flex;
  flex-wrap: wrap;
  margin: 0 auto;
  padding: 5px 10px;
}

.box1>view{
  height: 30px;
  line-height: 30px;
  text-align: center;
  font-size: 34rpx;
}

.dateOn{
  border-radius: 50%;
  background-color: hotpink;
  color: #fff;
}

.target{
  border-radius: 10%;
  color: #fff;
  padding: 5px 10px;
}

/* 设置背景遮罩层样式 */
.b1 {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  background: rgba(0, 0, 0, 0.4);
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
/* 设置展示图片大小 */
.b2 {
  width: 100%;
  background:rgb(243, 241, 241);
  padding-left: 20px;
}

.b2_text{
  padding-top: 10px;
}

.b2_image{
  float: left;
  margin: 10rpx 20rpx 0rpx 0rpx;
}

/* 设置展示图片与关闭按钮图片的距离 */
.t_w {
  margin-top: 20rpx;
}
/* 设置关闭按钮图片显示的大小 */
.b2 image {
  width: 100%;
  height: 100%;
}
/* 设置关闭按钮宽高 */
.t_image {
  width: 60rpx;
  height: 60rpx;
}

.flex-wrp-row {
  display: flex;
  flex-direction: row;
  width: 85%;
  background:rgb(245, 241, 241);
}

.item {
  padding: 10rpx;
  position: relative;
}

.item-left {
   flex: 1; /* 重要 */
   align-items:center;
   padding-left: 10rpx;
}

.item-right {
  position: relative;
  align-items:center;
}