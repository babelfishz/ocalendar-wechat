<!--pages/upload/upload.wxml-->
<view class="page">
  <view class="page__hd">
        <text class="page__title">上传</text>
        <text class="page__desc">记录到某个地方。</text>
  </view>
  <view class="page__bd">
        <form class="page__bd" catchsubmit="formSubmit">
          <view class="section section_gap">
            <view class="section__ctn">
                <image src= "{{uploadImagePath}}" mode= "aspectFit"/>
            </view>
          </view>
          <view class="section">
            <view class="section__title">名字</view>
            <input name="input" placeholder="请在这里输入" />
          </view>
          <view class="btn-area">
            <view class="{{showUploadStatus?'hide':''}}">
            <button type= "primary" formType="submit">上传</button>
            </view>
            <view class="{{showUploadStatus?'':'hide'}}">
            <text class="page__desc">记录成功了。</text>
            </view>
          </view>
        </form>
  </view>
</view>