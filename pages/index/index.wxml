<!--index.wxml-->

<view class="index">
    <view class="head" bindtap='bindUserInfoTap'>
        <view class="title">兰花日历</view>
        <view class="desc">{{motto}}</view>
    </view>

    <view class="body">
        <view class="widgets__item">
            <view id="view" class="widgets__info {{viewShow ? 'widgets__info_show' : ''}}" bindtap="bindUploadTap">
                    <text class="widgets__info-name text-xl">记录</text>
                    <text class='icon-cameraadd text-sl'></text>
                    <!--image class="widgets__info-img" src="../../image/camera.png" background-size="cover" /-->
            </view>
        </view>
        <view class="widgets__item">
            <view id="view" class="widgets__info {{viewShow ? 'widgets__info_show' : ''}}" bindtap="bindAlbumTap">
                    <text class="widgets__info-name text-xl">回顾</text>
                    <text class='icon-evaluate text-sl'></text>
                    <!--image class="widgets__info-img" src="../../image/remember.png" background-size="cover" /-->
            </view>
        </view>
        <view class="widgets__item">
            <view id="view" class="widgets__info {{viewShow ? 'widgets__info_show' : ''}}" bindtap="bindCalendarTap">
                    <text class="widgets__info-name text-xl">追寻</text>
                    <text class='icon-activity text-sl'></text>
                    <!--image class="widgets__info-img" src="../../image/target.png" background-size="cover" /-->
            </view>
        </view>
        <view class="widgets__item">
            <view id="view" class="widgets__info {{viewShow ? 'widgets__info_show' : ''}}" bindtap="bindLoginTap">
                    <text class="widgets__info-name text-xl">分享</text>
                    <text class='icon-people text-sl'></text>
                    <!--image class="widgets__info-img" src="../../image/target.png" background-size="cover" /-->
            </view>
        </view>
        <view class="widgets__item">
            <view id="view" class="widgets__info {{viewShow ? 'widgets__info_show' : ''}}" bindtap="bindSearchTap">
                    <text class="widgets__info-name text-xl">资料</text>
                    <text class='icon-search text-sl'></text>
                    <!--image class="widgets__info-img" src="../../image/target.png" background-size="cover" /-->
            </view>
        </view>
</view>

    <!--view class="footer" bindtap="bindSearchTap">
      <text>查找</text>
    </view-->    
    <!--view class="footer" bindtap="bindLoginTap">
      <text>分享</text>
    </view-->


</view>

