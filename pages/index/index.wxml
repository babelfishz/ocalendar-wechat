<!--index.wxml-->

<view class="index">
    <view class="head" bindtap="bindLoginTap">
        <view class="title">我的兰花日历</view>
        <view class="desc">行到水穷处，坐看云起时。</view>
    </view>

    <view class="body">
        <view class="widgets__item">
            <view id="view" class="widgets__info {{viewShow ? 'widgets__info_show' : ''}}" bindtap="bindUploadTap">
                    <text class="widgets__info-name">记录</text>
                    <image class="widgets__info-img" src="../../image/upload.png" background-size="cover" />
            </view>
        </view>
        <view class="widgets__item">
            <view id="view" class="widgets__info {{viewShow ? 'widgets__info_show' : ''}}" bindtap="bindAlbumTap">
                    <text class="widgets__info-name">回忆</text>
                    <image class="widgets__info-img" src="../../image/view.png" background-size="cover" />
            </view>
        </view>
        <view class="widgets__item">
            <view id="view" class="widgets__info {{viewShow ? 'widgets__info_show' : ''}}" >
                    <text class="widgets__info-name">目标</text>
                    <image class="widgets__info-img" src="../../image/target.png" background-size="cover" />
            </view>
        </view>
        <view class="widgets__item">
            <view id="view" class="widgets__info {{viewShow ? 'widgets__info_show' : ''}}" bindtap="bindCalendarTap">
                    <text class="widgets__info-name">追寻</text>
                    <image class="widgets__info-img" src="../../image/explore.png" background-size="cover" />
            </view>
        </view>
    </view>

