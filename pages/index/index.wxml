<!--index.wxml-->

<view class="index">
    <view class="head" >
        <view class="title">{{currentAlbumName}}的兰花日历</view>
        <view class="desc">{{motto}}</view>
    </view>

    <view class="body">
        <view class="widgets__item">
            <view id="view" class="widgets__info {{viewShow ? 'widgets__info_show' : ''}}" bindtap="bindUploadTap">
                    <text class="widgets__info-name">记录</text>
                    <image class="widgets__info-img" src="../../image/camera.png" background-size="cover" />
            </view>
        </view>
        <view class="widgets__item">
            <view id="view" class="widgets__info {{viewShow ? 'widgets__info_show' : ''}}" bindtap="bindAlbumTap">
                    <text class="widgets__info-name">回忆</text>
                    <image class="widgets__info-img" src="../../image/remember.png" background-size="cover" />
            </view>
        </view>
        <!--view class="widgets__item">
            <view id="view" class="widgets__info {{viewShow ? 'widgets__info_show' : ''}}" bindtap="bindPeoplesTap">
                    <text class="widgets__info-name">目标</text>
                    <image class="widgets__info-img" src="../../image/orchid.png" background-size="cover" />
            </view>
        </view-->
        <view class="widgets__item">
            <view id="view" class="widgets__info {{viewShow ? 'widgets__info_show' : ''}}" bindtap="bindCalendarTap">
                    <text class="widgets__info-name">追寻</text>
                    <image class="widgets__info-img" src="../../image/target.png" background-size="cover" />
            </view>
        </view>
    </view>

    <view class="footer" bindtap="bindSearchTap">
      <text>查找</text>
    </view>    
    <view class="footer" bindtap="bindLoginTap">
      <text>分享</text>
    </view>


</view>

