<!--pages/index/login.wxml-->
<view class="widgets__item">
    <view class="page__hd_small">
        <text class="page__title">浏览</text>
        <text class="page__desc">点击图标浏览其他用户的相册。</text>
    </view>

    <view  class='avatar_list'>      
      <view wx:for="{{users}}" wx:for-index= 'idx'>        
          <view class='avatar_item'>
                <image class= 'avatar' src="{{item.avatarUrl}}" bindtap="bindChooseUserTap" data-index='{{idx}}'></image>
                <image class ='changed_image' src='../../image/green_dot.png' hidden="{{!photoCountChanged[idx]}}"> </image>
                <view>{{item.nickName}}</view>
            </view>        
        </view>
    </view>
</view>

