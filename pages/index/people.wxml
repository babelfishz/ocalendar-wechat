<view class="widgets__item">
  <view class="page__hd_small">
        <text class="page__title">分享</text>
        <text class="page__desc">您的相册将对其他用户可见。</text>
  </view>

  <view wx:if="{{canIUse}}">
    <view class='content' hidden = "{{authorizationHidden}}">
        <view>申请获取以下权限:</view>
        <view class='page__desc'>
          <text>获得你的公开信息(昵称，头像等)</text>
          <text>允许朋友查看你的日历</text>
        </view>
        <button class='bottom' type='default' open-type="getUserInfo" lang="zh_CN" bindgetuserinfo="bindLoginTap">
        分享
        </button>
    </view>

    <view class='content' hidden = "{{!authorizationHidden}}">
        <button class='bottom' type='default' lang="zh_CN" bindtap='bindDeleteUserInfoTap'>
        取消分享
        </button>
    </view>
  </view>

  <view wx:else>请升级微信版本</view>
</view>