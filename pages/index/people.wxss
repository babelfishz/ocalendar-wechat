/* pages/index/login.wxss */
 
.content {
    margin-left: 50rpx;
    margin-bottom: 90rpx;
}
 
.content text {
    display: block;
    color: #9d9d9d;
    margin-top: 40rpx;
}
 
.bottom {
    margin: 50rpx 50rpx;
    font-size: 35rpx;
}

 .avatar_list{
  display: flex;
  flex-flow: row wrap;
  text-align: center;
  font-size: 15px;
}


.avatar_item{
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  position: relative;
  width: 210rpx;
  padding: 20rpx 0;
}

.avatar{
  width: 140rpx;
  height: 140rpx;
  margin: 0 auto;
}

.changed_image{
    position: absolute;
    right: 10rpx;
    top: 10rpx;
    width: 20rpx;
    height:20rpx;
}

.avatar_item>view{
  font-size: 30rpx;
  margin-top: 15rpx;
}

