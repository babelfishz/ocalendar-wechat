/* pages/index/login.wxss */
.header {
    margin: 90rpx 0 90rpx 50rpx;
    border-bottom: 1px solid #ccc;
    text-align: center;
    width: 650rpx;
    height: 300rpx;
    line-height: 450rpx;
}
 
.header image {
    width: 200rpx;
    height: 200rpx;
}
 
.content {
    margin-left: 50rpx;
    margin-bottom: 90rpx;
}
 
.content text {
    display: block;
    color: #9d9d9d;
    margin-top: 40rpx;
}
 
.bottom {
    margin: 50rpx 50rpx;
    font-size: 35rpx;
}

 .avatar_list{
  display: flex;
  flex-flow: row wrap;
  text-align: center;
  font-size: 15px;
}


.avatar_item{
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  width: 210rpx;
  padding: 20rpx 0;
}


.avatar{
  width: 140rpx;
  height: 140rpx;
  margin: 0 auto;
}


.avatar_item>view{
  font-size: 30rpx;
  margin-top: 15rpx;
}

.widgets__item{
    margin-top: 10px;
    margin-bottom: 10px;
    background-color: #FFFFFF;
    overflow: hidden;
    border-radius: 2px;
    cursor: pointer;
}

.widgets__line{
    content: " ";
    position: absolute;
    left: 20px;
    bottom: 0;
    right: 20px;
    height: 1rpx;
    background-color: #DFDFDF;
}